<div class="blog-container">
    <h1>All Blogs</h1>

    <a href="/blog/new">
        <button>Create Post</button>
    </a>
    <br>

    <div class="blog-wrapper">
        {{#each allBlogs}}
        <div class="blog-content">
            <img src="{{image}}" alt="">
            <a class="mainpage-link" href="/vendor/{{_id}}">

                <div class="blog-title">
                    <div>{{title}}</div>
                </div>

                <div class="blog-author">
                    <div class="blog-by-item">by</div>
                    <div>{{author}}</div>
                </div>

            </a>
            <div>Date</div>
            <div>{{date}}</div>

            <a href="/blog/{{_id}}">
                <div class="blog-button-container">
                    <button class="blog-button">See Blog</button>
                </div>
            </a>

        </div>


        {{/each}}
    </div>
</div>




