<form action="/review" method="POST">
    <div class="add-review-form">

        <input type="hidden" value="{{singleBlog._id}}" name="blogId" />

        <h1>Add A Comment</h1>

        <div class="add-review-form-date">
            <label>Date</label>
            <input class="add-review-date" type="date" name="date" />
        </div>

        <div class="add-review-form-comment">
            <label class="add-review-comment-title">Comment</label>
            <textarea class="add-review-textarea" type="text" name="comment" rows="5" cols="50"></textarea>
        </div>

        <div class="add-review-create-button">
            <input class="review-create-button" type="submit" value="Create" />
        </div>

    </div>
</form>

