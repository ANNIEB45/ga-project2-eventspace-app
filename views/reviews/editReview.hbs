<div class="comment-edit-container">

    <h1>Edit Review</h1>


    <form action="/review/{{singleReview._id}}?_method=PUT" method="POST">
        <div class="comment-edit-wrapper">
            <div class="comment-edit-items">
                <label>Date</label>
                <input type="datetime" name="date" value="{{singleReview.date}}" />
            </div>
            
            <div class="comment-edit-items">
                <label>Comment</label>
                <textarea type="text" name="comment" rows="5" cols="50"
                    value="{{singleReview.comment}}">{{singleReview.comment}}</textarea>
            </div>

            <input type="submit" value="Save" />
        </div>
    </form>

</div>
