<div class="container">

    <div class="navbar">
        <div class='logo-container'>
            <a class='logo' href="/vendor"> Fairy's Wand</a>
        </div>
        {{!-- use icon for edit/single/add pages --}}
        <span class="material-icons">
            <a class='icons' href="/vendor">home</a>
        </span>
    </div>
    <div class='border-bottom'></div>

    <div class="hero-image-vendor">
        <div class="hero-text">
            <div class="header">Find The Vendor <br> For Your Next Event</div>
        </div>
    </div>

    {{!-- <a href="/vendor/new"> --}}
    <button class='myBtn' data-toggle="modal" data-target="#myModal">Add Venue</button>
    {{!-- </a> --}}

    <div class="venue-list">
        {{#each allVendors}}
        <div class="venue-items">
            <img src="{{image}}" alt="">
            <div class="venue-titles">
                <a class="mainpage-link" href="/vendor/{{_id}}">
                    <div>{{name}}</div>
                </a>

                <div class="main-page-location-item">{{category}}</div>
                <br>

                <a href="#">
                    <div>{{phoneNumber}}</div>
                    <br>
                </a>

                <a href="#">
                    <div>{{email}}</div>
                </a>

                <div class="view-button">
                    <a href="/vendor/{{_id}}">
                        <button>View Vendor</button>
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{!-- ------------------------------------------------------------------------------------------- --}}

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog sm-size">
        <div class="modal-content">
            <div class="modal-header">

                <div class="navbar">
                    <div class='logo'>
                        <a href="/vendor"> Fairy's Paradise</a>
                    </div>
                    {{!-- use icon for edit/single/add pages --}}
                    <span class="material-icons">
                        <a href="/vendor">home</a>
                    </span>
                </div>
                <div class='border-bottom'></div>

                <div class="close-button-top">
                    <button type="button" class="close-btn-topOne" data-dismiss="modal">&times;</button>
                </div>

                <div class='vendor-header'>List Your Business With Us</div>
            </div>

            <div class="modal-body">

                <div class="form-container">
                    <div class="form-wrapper">
                        <form action="/vendor" method="POST">
                            <div class="form-items">
                                <label>Vendor</label>
                                <input type="text" name="name" />
                            </div>

                            <div class="form-items">
                                <label>Are you local?</label>
                                <input type="text" name="local" />
                            </div>

                            <div class="form-items">
                                <label>What kind of vendor?</label>
                                <input type="checkbox" name="category" value='Photograper'>
                                <label for="category"> Photographer</label><br>
                                <input type="checkbox" name="category" value='DJ'>
                                <label for="category">DJ</label><br>
                                <input type="checkbox" name="category" value='Rental'>
                                <label for="rental">Rental</label><br>
                                <input type="checkbox" name="category" value='Videographer'>
                                <label for="videographer">Videographer</label><br>
                                <input type="checkbox" name="category" value='Band'>
                                <label for="band">Band</label><br>
                                <input type="checkbox" name="category" value='Singer'>
                                <label for="singer">Singer</label><br>
                                <input type="checkbox" name="category" value='Florist'>
                                <label for="florist">Florist</label><br>
                                <input type="checkbox" name="category" value='Make-Up Artist'>
                                <label for="make-up artist">Make-Up Artist</label><br>
                                <input type="checkbox" name="category" value='Hair Stylist'>
                                <label for="hair stylist">Hair Stylist</label><br>
                                <input type="checkbox" name="category" value='Jeweler'>
                                <label for="Jeweler">Jeweler</label><br>
                            </div>

                            <div class="form-items">
                                <label>Business Email</label>
                                <input type="email" name="email" placeholder="john@email.com" />
                            </div>

                            <div class="form-items">
                                <label>Business Number</label>
                                <input type="text" name="phoneNumber" placeholder="222-222-222" />
                            </div>

                            <div class="form-items">
                                <label>Website</label>
                                <input type="text" name="website" />
                            </div>

                            <div class="form-items">
                                <label>Tell us about your business</label>
                                <textarea type="text" cols="30" rows="10" name="details"></textarea>
                            </div>

                            <input class="create-button" type="submit" value="Create" />
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="close-btn" data-dismiss="modal">Close</button>
        </div>

    </div>
</div>
</div>
