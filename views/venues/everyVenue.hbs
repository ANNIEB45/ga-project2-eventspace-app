<div class="container">
    <div class="navbar">
        <div class='logo-container'>
            <a class='logo' href="/venue"> Fairy's Wand</a>
        </div>
        {{!-- use icon for edit/single/add pages --}}
        <span class="material-icons">
            <a class='icons' href="/venue">home</a>
        </span>
    </div>
    <div class='border-bottom'></div>

    <div class="hero-image-venue">
        <div class="hero-text">
            <div class="header">Find The Venue For Your Next Event</div>
        </div>
    </div>
    {{!-- Button w/popup fill form --}}
    <a href="/venue/new">
        <button class='myBtn' data-toggle="modal" data-target="#myModal">Add Venue</button>
    </a>

    <div class="venue-list">
        {{#each allVenues}}
        <div class="venue-items">
            <img src="{{image}}" alt="">
            <a class="mainpage-link" href="/venue/{{_id}}">
                <div class="venue-titles">

                    <div>{{name}}</div>
                    <br>
                    <div class="main-page-location-item">{{location}}</div>
                    <br>
            </a>
            <br>

            <div class="view-button">
                <a href="/venue/{{_id}}">
                    <button>View Venue</button>
                </a>
            </div>
        </div>
    </div>


    {{/each}}
</div>
</div>

